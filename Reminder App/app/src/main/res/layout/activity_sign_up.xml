<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- TOP SPACE -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <!-- LOGO -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_logo"
        app:tint="@color/white"
        android:layout_gravity="center_horizontal" />

    <!-- APP NAME -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="MomentMinder"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- SPACE BETWEEN TITLE AND CARD -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- CARD CONTAINER -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_glass_card"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- TABS ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- LOGIN TAB -->
            <TextView
                android:id="@+id/tvLoginTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <!-- SIGNUP TAB -->
            <TextView
                android:id="@+id/tvSignupTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="SIGN UP"
                android:textColor="#B0BEC5"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- INDICATOR (Default under LOGIN) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <View
                android:id="@+id/viewIndicator"
                android:layout_width="155dp"
                android:layout_height="3dp"
                android:background="#FF6F00"
                android:layout_marginStart="0dp" />
        </LinearLayout>

        <!-- USER -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUser"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="User ID / Email"
            app:boxBackgroundColor="#1AFFFFFF"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="#B0BEC5"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#B0BEC5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PASSWORD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Password"
            app:boxBackgroundColor="#1AFFFFFF"
            app:boxStrokeColor="@color/white"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:hintTextColor="#B0BEC5"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#B0BEC5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CONFIRM PASSWORD (ONLY FOR SIGNUP) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRePass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Confirm Password"
            android:visibility="gone"
            app:boxBackgroundColor="#1AFFFFFF"
            app:boxStrokeColor="@color/white"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:hintTextColor="#B0BEC5"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#B0BEC5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_gradient"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- SWITCH MODE TEXT -->
        <TextView
            android:id="@+id/tvSwitchMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Don't have an account? Sign Up"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
